<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nsu.lict.familytree">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tree_logo   "
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyStoriesList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FamilyStoryList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddEvent"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyStory"
            android:parentActivityName=".AddEvent" />
        <activity
            android:name=".OthersStory"
            android:parentActivityName=".AddEvent" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LandingActivity" />
        <activity android:name=".StoryViewActivity"></activity>
    </application>

</manifest>