<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="#FAE4E9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewFamilyMembersStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Family Member's Story"
            android:fontFamily="cursive" />
        <ImageView
            android:id="@+id/imageViewFamilyMembers"
            android:layout_below="@+id/textViewFamilyMembersStoryTitle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_image"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/textViewFamilyMemberStoryActorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewFamilyMembers"
            android:inputType="textPersonName"
            android:layout_alignTop="@id/imageViewFamilyMembers"
            android:text="Ammu"
            android:gravity="left"/>
        <TextView
            android:id="@+id/textViewFamilyMemberStoryPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewFamilyMembers"
            android:layout_below="@id/textViewFamilyMemberStoryActorName"
            android:inputType="text"
            android:layout_alignLeft="@+id/textViewFamilyMemberStoryActorName"
            android:layout_marginTop="6dp"
            android:text="Place"
            android:gravity="left" />
        <TextView
            android:id="@+id/textViewFamilyMemberStoryTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewFamilyMembers"
            android:inputType="datetime"
            android:layout_alignLeft="@id/textViewFamilyMemberStoryActorName"
            android:layout_below="@id/textViewFamilyMemberStoryPlace"
            android:layout_marginTop="5dp"
            android:text="1989"
            android:gravity="left"/>
        <TextView
            android:id="@+id/textViewFamilyMemberStory"
            android:layout_below="@id/imageViewFamilyMembers"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:text="Story Goes Here"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed"/>

    </RelativeLayout>

</ScrollView>